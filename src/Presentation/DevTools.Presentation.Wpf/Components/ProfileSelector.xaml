<UserControl x:Class="DevTools.Presentation.Wpf.Components.ProfileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
    <Grid Margin="0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Label Content="Perfil:" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,5,0"/>
        
        <ComboBox Grid.Column="1" x:Name="ProfileCombo" 
                  IsEditable="True"
                  SelectionChanged="ProfileCombo_SelectionChanged"
                  Height="30"
                  Background="{DynamicResource ControlBackgroundColor}"
                  Foreground="{DynamicResource PrimaryTextColor}"
                  BorderBrush="{DynamicResource BorderBrush}">
        </ComboBox>
                  
        <Button Grid.Column="2" Content="Salvar" Click="SaveButton_Click" 
                Style="{DynamicResource SecondaryButtonStyle}" Margin="5,0,0,0" Width="60"/>
                
        <Button Grid.Column="3" Content="ðŸ—‘" Click="DeleteButton_Click" 
                Style="{DynamicResource IconButtonStyle}" Margin="5,0,0,0" ToolTip="Excluir Perfil"/>
    </Grid>
</UserControl>
