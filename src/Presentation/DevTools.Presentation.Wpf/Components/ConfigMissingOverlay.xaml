<UserControl x:Class="DevTools.Presentation.Wpf.Components.ConfigMissingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Background="#CC000000"> <!-- Semi-transparent black background -->
        <Border Background="{DynamicResource WindowBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="350">
            <StackPanel>
                <TextBlock Text="&#xE7BA;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="32" 
                           HorizontalAlignment="Center" 
                           Foreground="{DynamicResource PhoneAccentBrush}"
                           Margin="0,0,0,15"/>
                
                <TextBlock Text="Configuração Necessária" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Esta ferramenta requer configurações no arquivo appsettings.json." 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           Margin="0,0,0,15"/>

                <TextBox x:Name="PathBox" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         IsReadOnly="True"
                         FontSize="11"
                         Margin="0,0,0,15"/>

                <Button Content="Criar Padrão e Abrir Pasta" 
                        Click="OpenConfig_Click"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
