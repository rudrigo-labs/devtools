<Window x:Class="DevTools.Presentation.Wpf.Views.HarvestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:DevTools.Presentation.Wpf.Components"
        mc:Ignorable="d"
        Title="Coletor de Arquivos" Height="640" Width="900" WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindowStyle}">

    <Border Background="{StaticResource WindowBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/> <!-- Header -->
                <RowDefinition Height="*"/>   <!-- Content -->
                <RowDefinition Height="80"/>  <!-- Actions -->
            </Grid.RowDefinitions>

            <!-- Header (Draggable) -->
            <Border Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Header_MouseLeftButtonDown" CornerRadius="12,12,0,0">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text=">_" FontFamily="Consolas" FontSize="18" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="Coletor de Arquivos" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Style="{StaticResource IconButtonStyle}" Content="?" FontSize="14"
                            ToolTip="Copia arquivos filtrados por regras para pasta de saída" Margin="0,0,5,0"/>
                    <Button Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Click="Cancel_Click"
                            Style="{StaticResource IconButtonStyle}" Content="✕" FontSize="14"/>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="#333333"/>

            <!-- Form -->
            <StackPanel Grid.Row="1" Margin="30,20">
                <TextBlock Text="Configuração" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,15"/>
                
                <c:ProfileSelector x:Name="ProfileSelector" ToolName="harvest" Margin="0,0,0,20"/>

                <c:PathSelector x:Name="SourcePathSelector" Title="Diretório de Origem (Projeto para Análise)" 
                                IsFolderPicker="True" Margin="0,0,0,20"/>
                
                <c:PathSelector x:Name="OutputPathSelector" Title="Diretório de Destino (Local de Backup)" 
                                IsFolderPicker="True"/>

                <c:PathSelector x:Name="ConfigPathSelector" Title="Arquivo de Configuração (Opcional)" 
                                IsFolderPicker="False" Margin="0,20,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                     <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Pontuação Mínima" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,5"/>
                        <TextBox x:Name="MinScoreBox" Text="0" Width="100" Style="{StaticResource ModernTextBoxStyle}"/>
                     </StackPanel>
                     
                     <CheckBox x:Name="CopyFilesCheck" Content="Copiar Arquivos" IsChecked="True" VerticalAlignment="Bottom" Margin="0,0,20,5" Foreground="#DDDDDD"/>
                     <CheckBox x:Name="RememberSettingsCheck" Content="Lembrar configurações" IsChecked="False" VerticalAlignment="Bottom" Margin="0,0,0,5" Foreground="#DDDDDD"/>
                </StackPanel>
                                
                <TextBlock Text="Esta ferramenta analisará o diretório de origem em busca de classes auxiliares e utilitários (Helpers, Utils), pontuando-os com base em regras predefinidas, e copiará os arquivos úteis para o diretório de destino." 
                           TextWrapping="Wrap" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" Margin="0,20,0,0" LineHeight="18"/>
                
                <c:RunSummaryControl x:Name="RunSummary" Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Actions -->
            <Border Grid.Row="2" Background="{StaticResource ControlBackgroundBrush}" CornerRadius="0,0,12,12" Padding="30,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Cancelar" Click="Cancel_Click" Style="{StaticResource SecondaryButtonStyle}" 
                            Margin="0,0,15,0"/>
                    <Button Content="EXECUTAR HARVEST" Click="Run_Click" Style="{StaticResource PrimaryButtonStyle}" 
                            Padding="30,12"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
