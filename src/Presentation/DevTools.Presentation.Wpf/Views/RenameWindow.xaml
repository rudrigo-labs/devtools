<Window x:Class="DevTools.Presentation.Wpf.Views.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:DevTools.Presentation.Wpf.Components"
        Title="Renomear Projeto .NET" Height="640" Width="900" WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindowStyle}"
        ShowInTaskbar="True"
        Topmost="True">

    <Window.Resources>
        <!-- Styles removed to use global theme -->
    </Window.Resources>

    <Border Background="{StaticResource WindowBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Opacity="0.6" Color="Black"/>
        </Border.Effect>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
                <Grid Grid.Row="0" MouseLeftButtonDown="Header_MouseLeftButtonDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="✎" FontSize="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0"/>
                    <TextBlock Text="Renomear Projeto .NET" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                </StackPanel>
                <Button Grid.Column="1" Content="?" ToolTip="Renomeia projeto/solution e namespaces C# com opções de backup."
                        Style="{StaticResource IconButtonStyle}" FontSize="14" Margin="0,0,5,0"/>
                <Button Grid.Column="2" Content="✕" Click="CloseButton_Click" Style="{StaticResource IconButtonStyle}" FontSize="14"/>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <c:ProfileSelector x:Name="ProfileSelector" ToolName="rename" Margin="0,0,0,15"/>
                
                <Label Content="Pasta Raiz:"/>
                <c:PathSelector x:Name="RootPathSelector" Title="Pasta Raiz" IsFolderPicker="True" />

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Texto Antigo:"/>
                        <TextBox x:Name="OldTextBox" Style="{StaticResource ModernTextBoxStyle}" MinHeight="32"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Label Content="Texto Novo:"/>
                        <TextBox x:Name="NewTextBox" Style="{StaticResource ModernTextBoxStyle}" MinHeight="32"/>
                    </StackPanel>
                </Grid>

                <StackPanel Margin="0,15,0,0">
                    <Label Content="Modo de Renomeação:"/>
                    <ComboBox x:Name="ModeCombo" SelectedIndex="0" Style="{StaticResource ModernComboBoxStyle}">
                        <ComboBoxItem Content="Geral (Texto Simples)"/>
                        <ComboBoxItem Content="Namespace C# (Inteligente)"/>
                    </ComboBox>
                </StackPanel>
                
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Include (Glob):"/>
                        <TextBox x:Name="IncludeBox" Style="{StaticResource ModernTextBoxStyle}" MinHeight="32" ToolTip="Ex: *.cs, **/*.txt"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Label Content="Exclude (Glob):"/>
                        <TextBox x:Name="ExcludeBox" Style="{StaticResource ModernTextBoxStyle}" MinHeight="32" ToolTip="Ex: obj/*, bin/*"/>
                    </StackPanel>
                </Grid>
                
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <CheckBox x:Name="BackupCheck" Content="Criar Backup" IsChecked="True" Margin="0,0,15,0"/>
                    <CheckBox x:Name="UndoLogCheck" Content="Log de Reversão" IsChecked="True"/>
                    <CheckBox x:Name="DryRunCheck" Content="Dry Run (Teste)" IsChecked="False" Margin="15,0,0,0"/>
                    <CheckBox x:Name="RememberSettingsCheck" Content="Lembrar" IsChecked="False" Margin="15,0,0,0"/>
                </StackPanel>
                
                <c:RunSummaryControl x:Name="RunSummary" Margin="0,15,0,0"/>
            </StackPanel>

            <!-- Actions -->
            <Grid Grid.Row="2"
                  HorizontalAlignment="Right"
                  Margin="0,10,0,0"
                  Grid.IsSharedSizeScope="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="ActionButtons"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="ActionButtons"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Content="Cancelar"
                        Click="CloseButton_Click"/>

                <Button Grid.Column="2"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Renomear"
                        Click="ProcessButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
