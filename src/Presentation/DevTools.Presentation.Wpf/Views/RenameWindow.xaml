<Window x:Class="DevTools.Presentation.Wpf.Views.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renomeador em Massa" Height="450" Width="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" ShowInTaskbar="True" Topmost="True">

    <Window.Resources>
        <!-- Styles removed to use global theme -->
    </Window.Resources>

    <Border Background="{StaticResource WindowBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="5">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" MouseLeftButtonDown="Header_MouseLeftButtonDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="✎" FontSize="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0"/>
                    <TextBlock Text="Renomeador em Massa" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                </StackPanel>
                <Button Grid.Column="1" Content="✕" Click="CloseButton_Click" Style="{StaticResource IconButtonStyle}" FontSize="14"/>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <Label Content="Pasta Raiz:" Foreground="{StaticResource PrimaryTextBrush}"/>
                <Grid>
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <TextBox x:Name="RootPathBox" IsReadOnly="True" Cursor="Arrow" Style="{StaticResource ModernTextBoxStyle}"/>
                    <Button Grid.Column="1" Content="..." Width="40" Margin="5,0,0,0" Click="BrowseRoot_Click" Style="{StaticResource SecondaryButtonStyle}" Padding="0"/>
                </Grid>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Texto Antigo:" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBox x:Name="OldTextBox" Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Label Content="Texto Novo:" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBox x:Name="NewTextBox" Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                </Grid>

                <StackPanel Margin="0,15,0,0">
                    <Label Content="Modo de Renomeação:" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <ComboBox x:Name="ModeCombo" SelectedIndex="0" Height="30" Background="#333333" Foreground="Black">
                        <ComboBoxItem Content="Geral (Texto Simples)"/>
                        <ComboBoxItem Content="Namespace C# (Inteligente)"/>
                    </ComboBox>
                </StackPanel>
                
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Include (Glob):" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBox x:Name="IncludeBox" Style="{StaticResource ModernTextBoxStyle}" ToolTip="Ex: *.cs, **/*.txt"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <Label Content="Exclude (Glob):" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBox x:Name="ExcludeBox" Style="{StaticResource ModernTextBoxStyle}" ToolTip="Ex: obj/*, bin/*"/>
                    </StackPanel>
                </Grid>
                
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <CheckBox x:Name="BackupCheck" Content="Criar Backup" IsChecked="True" Foreground="#DDDDDD" VerticalContentAlignment="Center" Margin="0,0,15,0"/>
                    <CheckBox x:Name="UndoLogCheck" Content="Log de Reversão" IsChecked="True" Foreground="#DDDDDD" VerticalContentAlignment="Center"/>
                    <CheckBox x:Name="DryRunCheck" Content="Dry Run (Teste)" IsChecked="False" Foreground="#DDDDDD" VerticalContentAlignment="Center" Margin="15,0,0,0"/>
                    <CheckBox x:Name="RememberSettingsCheck" Content="Lembrar" IsChecked="False" Foreground="#DDDDDD" VerticalContentAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancelar" Click="CloseButton_Click" Margin="0,0,10,0" Style="{StaticResource SecondaryButtonStyle}"/>
                <Button Content="Renomear" Click="ProcessButton_Click" Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>