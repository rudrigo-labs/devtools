<Window x:Class="DevTools.Presentation.Wpf.Views.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Notes" Height="500" Width="350"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="#FF121212"
        Topmost="True"
        ShowInTaskbar="False">

    <Window.Resources>
        <SolidColorBrush x:Key="PhoneBackgroundBrush" Color="#FF121212"/>
        <SolidColorBrush x:Key="PhoneForegroundBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="PhoneAccentBrush" Color="#FF0078D7"/> <!-- Windows Blue -->
        <Style TargetType="Button" x:Key="AppBarButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="24">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderThickness="1" BorderBrush="#333333">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Header (Draggable) -->
            <Border Grid.Row="0" Background="Transparent" Padding="15,10" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <TextBlock x:Name="HeaderTitle" Text="NOTAS" FontFamily="Segoe UI Light" FontSize="24" Foreground="{StaticResource PhoneForegroundBrush}" IsHitTestVisible="False"/>
            </Border>

            <!-- List View -->
            <Grid x:Name="ListGrid" Grid.Row="1" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox x:Name="NotesList" Grid.Row="0" 
                         Background="Transparent" BorderThickness="0" 
                         Foreground="{StaticResource PhoneForegroundBrush}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MouseDoubleClick="NotesList_MouseDoubleClick"
                         Margin="10,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="0,0,0,1" BorderBrush="#333333" Padding="5,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding UpdatedUtc}" FontSize="12" Opacity="0.6"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}" Padding="2">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1FFFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#33FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- AppBar List -->
                <Border Grid.Row="1" Background="#FF1F1F1F" Padding="0,5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="AddButton" Style="{StaticResource AppBarButtonStyle}" ToolTip="Nova Nota" Click="AddButton_Click">
                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                        <Button x:Name="ExportButton" Style="{StaticResource AppBarButtonStyle}" ToolTip="Exportar Backup (ZIP)" Click="ExportButton_Click" Margin="10,0">
                            <TextBlock Text="&#xE78C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                        <Button x:Name="ImportButton" Style="{StaticResource AppBarButtonStyle}" ToolTip="Importar Backup (ZIP)" Click="ImportButton_Click" Margin="0,0,10,0">
                            <TextBlock Text="&#xE8B5;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                        
                        <Button x:Name="CloseButton" Style="{StaticResource AppBarButtonStyle}" ToolTip="Fechar" Click="CloseButton_Click">
                            <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Edit View -->
            <Grid x:Name="EditGrid" Grid.Row="1" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="NoteTitle" Grid.Row="0" Margin="15,0,15,10"
                         Background="Transparent" Foreground="{StaticResource PhoneForegroundBrush}"
                         CaretBrush="{StaticResource PhoneForegroundBrush}"
                         BorderThickness="0,0,0,1" BorderBrush="#333333"
                         FontSize="18" FontFamily="Segoe UI" FontWeight="SemiBold"
                         Padding="0,5"/>

                <TextBox x:Name="NotesContent" Grid.Row="1"
                         Background="Transparent"
                         Foreground="{StaticResource PhoneForegroundBrush}"
                         CaretBrush="{StaticResource PhoneForegroundBrush}"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="14"
                         Padding="15,5"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         SelectionBrush="{StaticResource PhoneAccentBrush}"
                         TextChanged="NotesContent_TextChanged"/>

                <!-- AppBar Edit -->
                <Border Grid.Row="2" Background="#FF1F1F1F" Padding="0,5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="BackButton" Style="{StaticResource AppBarButtonStyle}" ToolTip="Voltar" Click="BackButton_Click" Margin="0,0,10,0">
                            <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                        <Button x:Name="SaveButton" Style="{StaticResource AppBarButtonStyle}" ToolTip="Salvar (Ctrl+S)" Click="SaveButton_Click">
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>