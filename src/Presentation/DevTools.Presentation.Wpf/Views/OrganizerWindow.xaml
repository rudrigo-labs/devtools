<Window x:Class="DevTools.Presentation.Wpf.Views.OrganizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:DevTools.Presentation.Wpf.Components"
        mc:Ignorable="d"
        Title="Ferramenta Organizer" Height="400" Width="600"
        Style="{StaticResource ModernWindowStyle}">
    
    <Border Background="{StaticResource WindowBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/> <!-- Header -->
                <RowDefinition Height="*"/>   <!-- Content -->
                <RowDefinition Height="80"/>  <!-- Actions -->
            </Grid.RowDefinitions>

            <!-- Header (Draggable) -->
            <Border Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Header_MouseLeftButtonDown" CornerRadius="12,12,0,0">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text=">_" FontFamily="Consolas" FontSize="18" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="Organizer" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock Text="Organizador de Arquivos" FontSize="18" FontWeight="Light" Foreground="{StaticResource SecondaryTextBrush}" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Close Button -->
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Click="CloseButton_Click"
                            Style="{StaticResource IconButtonStyle}" Content="✕" FontSize="14"/>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="#333333"/>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                <StackPanel Margin="30,20,30,20">
                    <TextBlock Text="Configuração" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,15"/>
                    
                    <c:ProfileSelector x:Name="ProfileSelector" ToolName="organizer" Margin="0,0,0,20"/>

                    <c:PathSelector x:Name="InputPathSelector" Title="Pasta de Entrada (Arquivos Bagunçados)" 
                                    IsFolderPicker="True" Margin="0,0,0,20"/>
                    
                    <c:PathSelector x:Name="OutputPathSelector" Title="Pasta de Saída (Opcional - Padrão: Mesma da Entrada)" 
                    IsFolderPicker="True" Margin="0,0,0,20"/>

                    <CheckBox x:Name="SimulateCheck" Content="Simular (Apenas Teste - Não move arquivos)" 
                              Foreground="{StaticResource PrimaryTextBrush}"
                              FontSize="14"
                              IsChecked="False"
                              VerticalContentAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Actions -->
            <Border Grid.Row="2" Background="{StaticResource ControlBackgroundBrush}" CornerRadius="0,0,12,12" Padding="30,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Cancelar" Click="CloseButton_Click" Style="{StaticResource SecondaryButtonStyle}" 
                            Margin="0,0,15,0"/>
                    <Button Content="EXECUTAR ORGANIZER" Click="RunButton_Click" Style="{StaticResource PrimaryButtonStyle}" 
                            Padding="30,12"/>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>