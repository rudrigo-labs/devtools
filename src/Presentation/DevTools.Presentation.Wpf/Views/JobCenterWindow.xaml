<Window x:Class="DevTools.Presentation.Wpf.Views.JobCenterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DevTools — Jobs" Height="640" Width="900"
        Style="{StaticResource ModernWindowStyle}">

    <Border Background="{StaticResource WindowBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Header_MouseLeftButtonDown" CornerRadius="12,12,0,0">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="⏱" FontSize="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0"/>
                        <TextBlock Text="Job Center" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock Text="Execuções em background" FontSize="18" FontWeight="Light" Foreground="{StaticResource SecondaryTextBrush}" Margin="10,0,0,0"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Click="CloseButton_Click"
                            Style="{StaticResource IconButtonStyle}">
                        <TextBlock Text="✕" FontSize="14"/>
                    </Button>
                </Grid>
            </Border>

            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="#333333"/>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20,15,20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="JobsGrid"
                          ItemsSource="{Binding Jobs}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          Background="#1E1E1E"
                          Foreground="{StaticResource PrimaryTextBrush}"
                          BorderBrush="#333333"
                          BorderThickness="1"
                          RowHeight="40"
                          ColumnHeaderHeight="34"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tool" Binding="{Binding Name}" Width="140"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="110"/>
                        <DataGridTemplateColumn Header="Progresso" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ProgressBar Minimum="0" Maximum="100" Value="{Binding ProgressPercent}" Height="12" Margin="0,0,10,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Mensagem" Binding="{Binding Message}" Width="*"/>
                        <DataGridTextColumn Header="Início" Binding="{Binding StartedAt}" Width="160"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Grid.Row="1"
                           Margin="4,10,0,0"
                           Text="Dica: você pode fechar esta tela. Os jobs continuam rodando no tray."
                           Foreground="{StaticResource SecondaryTextBrush}" FontSize="12"/>
            </Grid>

            <!-- Actions -->
            <Border Grid.Row="2" Background="{StaticResource ControlBackgroundBrush}" CornerRadius="0,0,12,12" Padding="20,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Cancelar" Click="CloseButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,12,0"/>
                    <Button Content="Cancelar Job Selecionado" Click="CancelSelected_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,12,0"/>
                    <Button Content="Fechar" Click="CloseButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>
