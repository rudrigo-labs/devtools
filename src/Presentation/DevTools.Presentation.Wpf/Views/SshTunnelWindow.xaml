<Window x:Class="DevTools.Presentation.Wpf.Views.SshTunnelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gerenciador de Túneis SSH" Height="500" Width="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#1E1E1E"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="Manual">

    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#37373D"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2D2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource WindowBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="5">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="Gerenciador de Túneis SSH" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}"/>
                <Button Content="✕" Click="CloseButton_Click" HorizontalAlignment="Right" Style="{StaticResource IconButtonStyle}" FontSize="14"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar: Profiles List -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListBox x:Name="ProfilesList" Grid.Row="0" SelectionChanged="ProfilesList_SelectionChanged" DisplayMemberPath="Name"/>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button Content="+" Width="30" Click="AddProfile_Click" Margin="0,0,5,0" ToolTip="Novo Perfil" Style="{StaticResource SecondaryButtonStyle}" Padding="0"/>
                        <Button Content="-" Width="30" Click="RemoveProfile_Click" ToolTip="Remover Perfil" Style="{StaticResource SecondaryButtonStyle}" Padding="0" Background="#CC3333" BorderBrush="#CC3333"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Area: Form & Actions -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Nome do Perfil" Margin="0,0,0,5" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBox x:Name="ProfileNameInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Host SSH (Bastion)" Margin="0,0,0,5" Foreground="{StaticResource PrimaryTextBrush}"/>
                                <TextBox x:Name="SshHostInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Porta" Margin="0,0,0,5" Foreground="{StaticResource PrimaryTextBrush}"/>
                                <TextBox x:Name="SshPortInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Usuário SSH" Margin="0,0,0,5" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBox x:Name="SshUserInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>

                        <TextBlock Text="Arquivo de Identidade (Chave Privada)" Margin="0,0,0,5" Foreground="{StaticResource PrimaryTextBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="IdentityFileInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>
                            <Button Grid.Column="2" Content="..." Click="BrowseKey_Click" Width="40" VerticalAlignment="Top" Style="{StaticResource SecondaryButtonStyle}" Padding="0"/>
                        </Grid>

                        <Separator Background="#3F3F46" Margin="0,15"/>
                        <TextBlock Text="Mapeamento de Túnel" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="{StaticResource AccentBrush}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Local -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Local (Sua Máquina)" FontWeight="Bold" Margin="0,0,0,10" Foreground="{StaticResource PrimaryTextBrush}"/>
                                <TextBlock Text="Host Local (Bind)" Margin="0,0,0,5" Foreground="{StaticResource SecondaryTextBrush}"/>
                                <TextBox x:Name="LocalBindInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>
                                <TextBlock Text="Porta Local" Margin="0,0,0,5" Foreground="{StaticResource SecondaryTextBrush}"/>
                                <TextBox x:Name="LocalPortInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>

                            <!-- Remote -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Remoto (Destino)" FontWeight="Bold" Margin="0,0,0,10" Foreground="{StaticResource PrimaryTextBrush}"/>
                                <TextBlock Text="Host Remoto" Margin="0,0,0,5" Foreground="{StaticResource SecondaryTextBrush}"/>
                                <TextBox x:Name="RemoteHostInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>
                                <TextBlock Text="Porta Remota" Margin="0,0,0,5" Foreground="{StaticResource SecondaryTextBrush}"/>
                                <TextBox x:Name="RemotePortInput" TextChanged="Input_Changed" Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer Actions -->
                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="#555555" Margin="0,0,10,0"/>
                        <TextBlock x:Name="StatusText" Text="Parado" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="SaveButton" Content="Salvar" Click="SaveButton_Click" Margin="0,0,10,0" Style="{StaticResource SecondaryButtonStyle}"/>
                        <Button x:Name="ToggleTunnelButton" Content="Conectar" Click="ToggleTunnel_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        </Grid>
    </Border>
</Window>
