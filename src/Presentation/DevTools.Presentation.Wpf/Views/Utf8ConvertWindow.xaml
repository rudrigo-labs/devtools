            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                
                <c:ProfileSelector x:Name="ProfileSelector" ToolName="utf8convert" Margin="0,0,0,15"/>

                <Label Content="Pasta Raiz:"/>
                <c:PathSelector x:Name="RootPathSelector" Title="Pasta Raiz" IsFolderPicker="True" />

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <CheckBox x:Name="RecursiveCheck" Content="Recursivo" IsChecked="True" Margin="0,0,15,0"/>
                    <CheckBox x:Name="BackupCheck" Content="Criar Backup" IsChecked="True" Margin="0,0,15,0"/>
                    <CheckBox x:Name="BomCheck" Content="Adicionar BOM" IsChecked="True"/>
                </StackPanel>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancelar" Click="CloseButton_Click" Margin="0,0,10,0" Style="{StaticResource SecondaryButtonStyle}"/>
                <Button Content="Converter" Click="ProcessButton_Click" Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
