<Window x:Class="DevTools.Presentation.Wpf.Views.SnapshotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:DevTools.Presentation.Wpf.Components"
        Title="Snapshot de Projeto" Height="640" Width="900" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" ShowInTaskbar="True" Topmost="True">

    <Border Background="{StaticResource WindowBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="5">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" MouseLeftButtonDown="Header_MouseLeftButtonDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“·" FontSize="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0"/>
                    <TextBlock Text="Snapshot do Projeto" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                </StackPanel>
                <Button Grid.Column="1" Content="?" ToolTip="Gera ZIP do projeto com filtros." Style="{StaticResource IconButtonStyle}" FontSize="14" Margin="0,0,5,0"/>
                <Button Grid.Column="2" Content="âœ•" Click="CloseButton_Click" Style="{StaticResource IconButtonStyle}" FontSize="14"/>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                
                <c:ProfileSelector x:Name="ProfileSelector" ToolName="snapshot" Margin="0,0,0,15"/>

                <Label Content="Pasta do Projeto:"/>
                <Grid>
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <TextBox x:Name="RootPathBox" IsReadOnly="True" Cursor="Arrow" Style="{StaticResource ModernTextBoxStyle}"/>
                    <Button Grid.Column="1" Content="Procurar" Margin="5,0,0,0" Click="BrowseRoot_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                </Grid>

                <Label Content="Formatos de SaÃ­da:" Margin="0,15,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <CheckBox x:Name="TextCheck" Content="Texto Unificado (.txt)" IsChecked="True" Margin="0,5"/>
                        <CheckBox x:Name="HtmlCheck" Content="Preview HTML (.html)" IsChecked="False" Margin="0,5"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <CheckBox x:Name="JsonNestedCheck" Content="JSON Aninhado (.json)" IsChecked="False" Margin="0,5"/>
                        <CheckBox x:Name="JsonRecursiveCheck" Content="JSON Recursivo (.json)" IsChecked="False" Margin="0,5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancelar" Click="CloseButton_Click" Margin="0,0,10,0" Style="{StaticResource SecondaryButtonStyle}"/>
                <Button Content="Gerar Snapshot" Click="ProcessButton_Click" Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
